{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- ADD THESE LINES BELOW ---
    "baseUrl": ".", // This tells TypeScript to resolve modules relative to the project root
    "paths": {
      // These are your module aliases, mapping @/something to actual file paths
      "@/*": ["./src/*"], // This covers things like "@/app", "@/pages", etc.
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"] // Based on your previous errors
      // If you have other top-level folders in 'src' that you import from
      // e.g., "@/utils/*": ["./src/utils/*"]
    }
    // --- END ADDED LINES ---
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}